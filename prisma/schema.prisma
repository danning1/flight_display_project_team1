// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model category{
  name String @unique
}

model movie{
  name String @unique
  desc String
  type Int
  length String
}

model menu{
  name String @unique
  desc String
  type Int
  price Float
}

model shoppingCart{
  id Int @id() @default(autoincrement())
  name String
  price Float
  count Int
}

model user{
  id Int @id @default(autoincrement())
  name String
  password String
  balance Float
}